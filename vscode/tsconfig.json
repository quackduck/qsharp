{
  "compilerOptions": {
    "moduleResolution": "Bundler",
    "customConditions": ["browser"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "target": "ES2020",
    "outDir": "out",
    "lib": ["ES2020", "WebWorker"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["test", "src/webview"]
}
